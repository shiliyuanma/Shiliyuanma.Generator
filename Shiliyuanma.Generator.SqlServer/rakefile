task default: %w[run]

task :run do
  %x(dotnet run)
end

task :image do
  %x(docker build -t shiliyuanma/generator-sqlserver:latest .)
  %x(docker image prune -f)
end

task :container do
  %x(docker run --name generator-sqlserver --restart always -p 5000:5000 -d shiliyuanma/generator-sqlserver)
end